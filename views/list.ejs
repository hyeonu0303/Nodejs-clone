<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  <!--axios-->
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <!--jQuery-->
  <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
  <title>Document</title>
</head>

<body>
  <div class="container mt-5">
    <div class="input-group mb-2">
      <input class="form-control" id="search-input">
      <button class="input-group-append btn btn-danger" id="search">검색</button>
    </div>
    <ul class="list-group">
      <% for(let i=0; i<posts.length; i++) { %>
        <li class="list-group-item">
          <h4>할일:<%= posts[i].title %>
          </h4>
          <p>마감일:<%= posts[i].date %>
          </p>
          <button class="btn btn-outline-primary delete-button" data-id="<%= posts[i]._id %>">삭제</button>
          <button type="submit" class="btn btn-outline-danger put-button" data-id="<%= posts[i]._id %>">수정</button>
          <button type="submit" class="btn btn-outline-success chat-button" data-id="<%= posts[i]._id %>">채팅</button>
        </li>
        <% } %>
    </ul>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
    crossorigin="anonymous"></script>
</body>

<script>
  $('.delete-button').click(function (e) {
    $.ajax({
      method: 'DELETE',
      url: `/delete`,
      data: { _id: e.target.dataset.id }
    }).done((result) => {
      $(this).parent('li').fadeOut();
    })
  });

  $('.put-button').click(function (e) {
    window.location.href = `/edit/${e.target.dataset.id}`;
  })
  //검색기능
  $('#search').click(function () {
    var 입력한값 = $('#search-input').val();
    window.location.replace('/search?value=' + 입력한값)
  });

  $('.chat-button').click((e)=>{
    axios.get(`/chat/${e.target.dataset.id}`)
      .then((response)=>{
        window.location.href=`/chat/${e.target.dataset.id}`
      })
      .catch(error=>{
        console.log(error);
      })
  })
</script>
</body>
</html>