<!--axios-->
<script src="https://unpkg.com/axios/dist/axios.min.js"></script> 
  <title>Document</title>
</head>

<body>
  <div class="container mb-3">
    <h2>글작성페이지</h2>
    <div>
      <label for="exampleFormControlInput1" class="form-label">할일</label>
      <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="할일을 입력해주세요" name="title">
    </div>
    <div class="mb-3">
      <label for="exampleFormControlInput1" class="form-label">Due date</label>
      <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="마감날짜" name="date">
    </div>
    <button type="submit" class="btn btn-secondary add-button">저장</button>
  </div>
  <script>
    $('.add-button').click(() => {
      axios.post('/add', {
        title: $('input[name="title"]').val(),
        date: $('input[name="date"]').val()
      })
        .then(function (response) {
          console.log(response);
          console.log('저장완료');
          window.location.href = '/list'
        })
        .catch(function (error) {
          console.log(error);
        });
    })
  </script>
  
  
</body>

</html>